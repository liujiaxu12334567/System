<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.system.mapper.ClassMapper">

    <resultMap id="ClassResultMap" type="com.project.system.entity.Class">
        <id property="classId" column="class_id"/>
        <result property="className" column="class_name"/>
        <result property="major" column="major"/> <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="findById" resultMap="ClassResultMap">
        SELECT * FROM sys_class WHERE class_id = #{classId}
    </select>

    <insert id="insert">
        INSERT INTO sys_class (class_id, class_name, major, create_time)
        VALUES (#{classId}, #{className}, #{major}, NOW()) </insert>

    <select id="selectAllClasses" resultMap="ClassResultMap">
        SELECT class_id, class_name, major FROM sys_class ORDER BY class_id ASC
    </select>

    <update id="updateMajor">
        UPDATE sys_class
        SET major = #{major}
        WHERE class_id = #{classId}
    </update>
</mapper>

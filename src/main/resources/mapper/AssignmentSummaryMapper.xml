<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.system.mapper.AssignmentSummaryMapper">

    <resultMap id="AssignmentSummaryMap" type="com.project.system.entity.AssignmentSummary">
        <id column="id" property="id"/>
        <result column="course_id" property="courseId"/>
        <result column="class_id" property="classId"/>
        <result column="date" property="date"/>
        <result column="total" property="total"/>
        <result column="submitted" property="submitted"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <select id="selectByCourseIds" resultMap="AssignmentSummaryMap">
        SELECT id, course_id, class_id, date, total, submitted, created_at
        FROM assignment_summary
        WHERE course_id IN
        <foreach collection="courseIds" item="cid" open="(" separator="," close=")">
            #{cid}
        </foreach>
        ORDER BY date ASC, id ASC
    </select>
</mapper>

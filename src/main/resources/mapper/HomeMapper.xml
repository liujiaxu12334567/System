<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.system.mapper.HomeMapper">

    <resultMap id="CourseMap" type="com.project.system.entity.Course">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="semester" property="semester"/>
        <result column="teacher" property="teacher"/>
        <result column="code" property="code"/>
        <result column="status" property="status"/>
        <result column="color" property="color"/>
        <result column="is_top" property="isTop"/>
        <result column="class_id" property="classId"/>
    </resultMap>

    <resultMap id="TaskMap" type="com.project.system.entity.Task">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="course_name" property="courseName"/>
        <result column="deadline" property="deadline"/>
        <result column="status" property="status"/>
    </resultMap>

    <select id="selectAllCourses" resultMap="CourseMap">
        SELECT c.* FROM sys_course c ORDER BY c.is_top DESC, c.id ASC
    </select>

    <select id="selectCoursesByClassId" resultMap="CourseMap">
        SELECT c.* FROM sys_course c
        WHERE c.class_id = #{classId}
        ORDER BY c.is_top DESC, c.id ASC
    </select>

    <select id="selectAllTasks" resultMap="TaskMap">
        SELECT * FROM sys_task ORDER BY id DESC
    </select>

</mapper>

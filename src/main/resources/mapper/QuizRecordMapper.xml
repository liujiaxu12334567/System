<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.system.mapper.QuizRecordMapper">

    <resultMap id="QuizRecordResultMap" type="com.project.system.entity.QuizRecord">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="material_id" property="materialId"/>
        <result column="score" property="score"/>
        <result column="user_answers" property="userAnswers"/>
        <result column="ai_feedback" property="aiFeedback"/>
        <result column="submit_time" property="submitTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.project.system.entity.QuizRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_quiz_record(user_id, material_id, score, user_answers, ai_feedback, submit_time)
        VALUES(#{userId}, #{materialId}, #{score}, #{userAnswers}, #{aiFeedback}, NOW())
    </insert>

    <select id="findByUserIdAndMaterialId" resultMap="QuizRecordResultMap">
        SELECT * FROM sys_quiz_record
        WHERE user_id = #{userId} AND material_id = #{materialId} LIMIT 1
    </select>

    <update id="updateAiFeedback" parameterType="com.project.system.entity.QuizRecord">
        UPDATE sys_quiz_record SET ai_feedback = #{aiFeedback} WHERE id = #{id}
    </update>

    <select id="findByMaterialId" resultMap="QuizRecordResultMap">
        SELECT * FROM sys_quiz_record
        WHERE material_id = #{materialId} ORDER BY submit_time DESC
    </select>

    <update id="updateScoreAndFeedback" parameterType="com.project.system.entity.QuizRecord">
        UPDATE sys_quiz_record
        SET score = #{score}, ai_feedback = #{aiFeedback}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM sys_quiz_record WHERE id = #{id}
    </delete>

    <select id="selectByUserId" resultMap="QuizRecordResultMap">
        SELECT * FROM sys_quiz_record WHERE user_id = #{userId}
    </select>

    <select id="findById" resultMap="QuizRecordResultMap">
        SELECT * FROM sys_quiz_record WHERE id = #{id}
    </select>
</mapper>